@model Wedding

<div class="text-center">
    <div class="text-align">
    <h1 class="display-4">Plan a Wedding</h1>
</div>

<div class="container w-75 mx-auto">

    <form 
    class="shadow p-3 rounded"
    asp-controller="Weddings"
    asp-action="Create"
    method="POST">
    
    <div class="mb-3">
        <label asp-for="WedderOne"></label>
        <span asp-validation-for="WedderOne" class="text-danger font-weighted-bold"></span>
        <input class="form-control" asp-for="WedderOne" />
    </div>

    <div class="mb-3">
        <label asp-for="WedderTwo"></label>
        <span asp-validation-for="WedderTwo" class="text-danger font-weighted-bold"></span>
        <input class="form-control" asp-for="WedderTwo" />
    </div>

    <div class="mb-3">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date" class="text-danger font-weighted-bold"></span>
        <input type="date" class="form-control" asp-for="Date" />
    </div>

    <div class="mb-3">
        <label asp-for="Address"></label>
        <span asp-validation-for="Address" class="text-danger font-weighted-bold"></span>
        <input class="form-control" asp-for="Address" />
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>